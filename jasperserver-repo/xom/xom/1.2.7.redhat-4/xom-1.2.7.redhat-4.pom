<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>jboss-parent</artifactId>
    <groupId>org.jboss</groupId>
    <version>11-redhat-1</version>
  </parent>
  <groupId>xom</groupId>
  <artifactId>xom</artifactId>
  <version>1.2.7.redhat-4</version>
  <name>XOM</name>
  <description>The XOM Dual Streaming/Tree API for Processing XML</description>
  <url>http://xom.nu</url>
  <inceptionYear>2002</inceptionYear>
  <licenses>
    <license>
      <name>The GNU Lesser General Public License, Version 2.1</name>
      <url>http://www.gnu.org/licenses/lgpl-2.1.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>elharo</id>
      <name>Elliotte Rusty Harold</name>
      <email>elharo@ibiblio.org</email>
      <organization>Cafe au Lait</organization>
    </developer>
  </developers>
  <mailingLists>
    <mailingList>
      <name>XOM Interest Mailing List</name>
      <archive>http://lists.ibiblio.org/pipermail/xom-interest/</archive>
    </mailingList>
  </mailingLists>
  <scm>
    <url>https://xom.dev.java.net/source/browse/xom/</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.8.0</version>
    </dependency>
    <dependency>
      <groupId>jaxen</groupId>
      <artifactId>jaxen</artifactId>
      <version>1.1.1</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <testSourceDirectory>src/nu/xom/tests</testSourceDirectory>
    <resources>
      <resource>
        <filtering>false</filtering>
        <directory>${project.build.sourceDirectory}</directory>
        <includes>
          <include>nu/xom/*.dat</include>
        </includes>
      </resource>
      <resource>
        <filtering>false</filtering>
        <directory>${project.build.sourceDirectory}</directory>
        <includes>
          <include>nu/xom/version.txt</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <echo file="src/nu/xom/version.txt">${project.version}</echo>
                <copy file="src15/nu/xom/JDK15XML1_0Parser.java" tofile="src/nu/xom/JDK15XML1_0Parser.java" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <includes>
            <include>nu/xom/*.java</include>
            <include>nu/xom/xslt/*.java</include>
            <include>nu/xom/xinclude/*.java</include>
            <include>nu/xom/converters/*.java</include>
            <include>nu/xom/canonical/*.java</include>
            <include>nu/xom/tests/XOMTestCase.java</include>
          </includes>
          <excludes>
            <exclude>nu/xom/samples/*.java</exclude>
            <exclude>nu/xom/benchmarks/*.java</exclude>
            <exclude>nu/xom/pantry/*.java</exclude>
            <exclude>nu/xom/tools/*.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <index>true</index>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
            <manifestEntries>
              <Sealed>true</Sealed>
              <Built-By>${user.name}</Built-By>
              <Specification-Title>XOM</Specification-Title>
              <Specification-Version>${project.version}</Specification-Version>
              <Specification-Vendor>Elliotte Rusty Harold</Specification-Vendor>
              <Implementation-Title>XOM</Implementation-Title>
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Vendor>Elliotte Rusty Harold</Implementation-Vendor>
              <Main-Class>nu.xom.Info</Main-Class>
            </manifestEntries>
            <manifestSections>
              <manifestSection>
                <name>nu/xom/</name>
                <manifestEntries>
                  <Sealed>true</Sealed>
                  <Specification-Title>XOM core classes</Specification-Title>
                  <Implementation-Title>nu.xom</Implementation-Title>
                  <Implementation-Version>${project.version}</Implementation-Version>
                  <Implementation-Vendor>Elliotte Rusty Harold</Implementation-Vendor>
                </manifestEntries>
              </manifestSection>
              <manifestSection>
                <name>nu/xom/xslt/</name>
                <manifestEntries>
                  <Sealed>true</Sealed>
                  <Specification-Title>XOM XSLT classes</Specification-Title>
                  <Implementation-Title>nu.xom.xslt</Implementation-Title>
                </manifestEntries>
              </manifestSection>
              <manifestSection>
                <name>nu/xom/xinclude/</name>
                <manifestEntries>
                  <Sealed>true</Sealed>
                  <Specification-Title>XOM XInclude classes</Specification-Title>
                  <Implementation-Title>nu.xom.xinclude</Implementation-Title>
                </manifestEntries>
              </manifestSection>
              <manifestSection>
                <name>nu/xom/converters/</name>
                <manifestEntries>
                  <Sealed>true</Sealed>
                  <Specification-Title>XOM converters to other object models</Specification-Title>
                  <Implementation-Title>nu.xom.converters</Implementation-Title>
                </manifestEntries>
              </manifestSection>
              <manifestSection>
                <name>nu/xom/canonical/</name>
                <manifestEntries>
                  <Sealed>true</Sealed>
                  <Specification-Title>XOM Canonical XML support</Specification-Title>
                  <Implementation-Title>nu.xom.canonical</Implementation-Title>
                </manifestEntries>
              </manifestSection>
            </manifestSections>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <overview>${project.basedir}/overview.html</overview>
          <splitindex>true</splitindex>
          <detectLinks>true</detectLinks>
          <bottom>Copyright 2002-2010 &amp;lt;a href='http://www.elharo.com/'&amp;gt;Elliotte Rusty Harold&amp;lt;/a&amp;gt;&amp;lt;br /&amp;gt; &amp;lt;a href='&amp;#109;&amp;#97;&amp;#105;&amp;#108;&amp;#116;&amp;#111;&amp;#58;elharo%40ibiblio%2Eorg?Subject=XOM'&amp;gt;elharo&amp;#64;ibiblio&amp;#46;org&amp;lt;/a&amp;gt;</bottom>
          <excludePackageNames>nu.xom.samples:nu.xom.benchmarks:nu.xom.pantry:nu.xom.tools:nu.xom.tests</excludePackageNames>
          <sourceFileIncludes>
            <sourceFileInclude>nu/xom/*.java</sourceFileInclude>
            <sourceFileInclude>nu/xom/xslt/*.java</sourceFileInclude>
            <sourceFileInclude>nu/xom/xinclude/*.java</sourceFileInclude>
            <sourceFileInclude>nu/xom/converters/*.java</sourceFileInclude>
            <sourceFileInclude>nu/xom/canonical/*.java</sourceFileInclude>
            <sourceFileInclude>nu/xom/tests/XOMTestCase.java</sourceFileInclude>
          </sourceFileIncludes>
          <sourceFileExcludes>
            <sourceFileExclude>nu/xom/samples/*.java</sourceFileExclude>
            <sourceFileExclude>nu/xom/benchmarks/*.java</sourceFileExclude>
            <sourceFileExclude>nu/xom/pantry/*.java</sourceFileExclude>
            <sourceFileExclude>nu/xom/tools/*.java</sourceFileExclude>
          </sourceFileExcludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <configuration>
          <includes>
            <include>nu/xom/*.java</include>
            <include>nu/xom/xslt/*.java</include>
            <include>nu/xom/xinclude/*.java</include>
            <include>nu/xom/converters/*.java</include>
            <include>nu/xom/canonical/*.java</include>
            <include>nu/xom/tests/XOMTestCase.java</include>
          </includes>
          <excludes>
            <exclude>nu/xom/samples/*.java</exclude>
            <exclude>nu/xom/benchmarks/*.java</exclude>
            <exclude>nu/xom/pantry/*.java</exclude>
            <exclude>nu/xom/tools/*.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.14.1</version>
        <configuration>
          <includes>
            <include>nu/xom/tests/*Test.java</include>
          </includes>
          <excludes>
            <exclude>nu/xom/tests/MegaTest.java</exclude>
            <exclude>nu/xom/tests/EBCDICTest.java</exclude>
            <exclude>nu/xom/tests/XSLTransformTest.java</exclude>
            <exclude>nu/xom/tests/XIncludeTest.java</exclude>
            <exclude>nu/xom/tests/BaseURITest.java</exclude>
            <exclude>nu/xom/tests/EncodingTest.java</exclude>
            <exclude>nu/xom/tests/DocumentTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.7</version>
        <executions>
          <execution>
            <id>bundle-manifest</id>
            <phase>process-classes</phase>
            <goals>
              <goal>manifest</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
